                      <div class='form-group'>
                        <label class='control-label col-md-3'>Name:</label>
                        <div class='col-md-9'>
                          <input type='text' class='form-control' data-validation="required" name="user[name]" data-validation-error-msg="Please enter your full name">
                        </div>
                      </div>
                      
                      <div class='form-group'>
                        <label class='control-label col-md-3'>Mobile:</label>
                        <div class='col-md-9'>
                          <input type='text' class='form-control' name="user[mobile]" data-validation="required number length" data-validation-allowing='integer' data-validation-length='10-10' data-validation-error-msg="Please enter a valid mobile number">
                        </div>
                      </div>
                      
                      <div class='form-group'>
                        <label class='control-label col-md-3'>Email:</label>
                        <div class='col-md-9'>
                          <input type='text' class='form-control' name="user[email]" data-validation="email" data-validation-error-msg="Please enter a valid email address">
                        </div>
                      </div>
                    </div>
                    <div class='col-md-6'>
                      <div class='form-group'>
                        <label class='control-label col-md-3'>Location:</label>
                        <div class='col-md-9'>
                          <input type='text' class='form-control' name="user[location]">
                        </div>
                      </div>
                      
                      <div class='form-group'>
                        <label class='control-label col-md-3'>Profession:</label>
                        <div class='col-md-9'>
                          <select class='form-control' name="user[profession]">              
                            <option value='student'>Student</option>
                            <option value='employee'>Employee</option>
                            <option value='doctor'>Doctor</option>
                          </select>
                        </div>
                      </div>

                      <div class='form-group'>
                        <label class='control-label col-md-3'>Married</label>
                        <div class='col-md-9'>
                          <label class="radio-inline">
                            <input type='radio' name="user[married]" value='1'> Yes            
                          </label>
                          <label class="radio-inline">
                            <input type='radio' name="user[married]" value='0'> No
                          </label>
                        </div>
                      </div>
                    </div>
                  </div>                                            
          
                  <div class='form-group'>
                    <div class='col-md-12'>
                      <input type='submit' class='btn pull-right'>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>

