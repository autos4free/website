@import variables

.hero-button-container
  text-align: center

@media (min-width: 768px)
  .hero-section
    height: 500px
@media (max-width: 767px)
  .hero-section
    height: 770px
.hero-section
  position: relative
  z-index: 3
  .hero-background
    background: url('<%= asset_path('auto-hero-1.jpg') %>')
    background-size: cover
    height: 500px
  .hero-button-content
    height: 70px
    vertical-align: middle
    padding-left: 20px
    color: white
    font-weight: 600
    font-size: 16px
    cursor: pointer
    transition: .8s ease-out
    position: relative
    // span
    //   transition: .2s ease-out
    .no-registering, .registering
      transition: .8s ease-out
    .registering
      color: $darkGrey
      margin-right: 10px
    // @media (max-width: 767px)
    //   .registering
    //     float: left
    // @media (min-width: 768px)
    //   .registering
    //     float: right
  .hero-button-content.no-registering
    .no-registering
      visibility: visible
      opacity: 1
    .registering
      visibility: hidden
      opacity: 0
  .hero-button-content.registering
    .no-registering
      visibility: hidden
      opacity: 0
    .registering    
      visibility: visible
      opacity: 1  
  .hero-button-content:hover, .hero-button-content:focus, .hero-button-content:active
    text-decoration: none
    color: $grey
  .hero-container:after, .hero-container:before
    content: " "
    display: table

  @media (min-width: 768px)
    .hero-container
      width: 750px
      margin-right: auto
      margin-left: auto
      padding-left: 15px
      padding-right: 15px
    .hero-container:after, .hero-container:before
      content: " "
      display: table
    .hero-content
      width: 500px
      background: white
      height: 270px
      position: absolute
      bottom: -20px
    .hero-button-content
      display: table-cell
      height: 70px
      width: 500px
  
  @media (min-width: 992px)
    .hero-container
      width: 970px
      margin-right: auto
      margin-left: auto

  @media (min-width: 1200px)
    .hero-container
      width: 1170px
      margin-right: auto
      margin-left: auto  
  
  @media (max-width: 767px)
    .hero-content
      background: white
      height: 270px
    .hero-button-content
      display: block
      height: 70px
      width: 100%
      line-height: 70px

.carousel-content
  padding: 75px 40px
  text-align: center
  height: 100%
  font-size: 20px

.carousel-indicators
  right: 0px
  top: 10px
  width: 70px
  left: inherit

.coupons-image
  width: 100%

.thumbnail
  border: none

.why-section
  transition: all .8s ease-in-out
  .thumbnail
    img
      width: 60px
      height: 60px
    .caption
      text-align: center

.safe-section
  .thumbnail
    position: relative
    padding: 0px
    height: 280px
    overflow: hidden
    box-shadow: 0px 2px 9px -2px rgba(0, 0, 0, 0.3)
    .thumb-img
      height: 200px
      width: 100%
      background-size: cover !important
    a
      color: $hoverGreen
    
    $transitionSpeed: 0.6s
    .caption
      height: 280px
      background: white
      transition: all $transitionSpeed ease-in-out  
      .title, p, a
        transition: all $transitionSpeed ease-in-out
    .caption
      a.no-read
        float: none
        position: absolute
        left: 10px
        bottom: 10px
    .caption.no-show
      .title
        color: $black        
      a.no-read
        visibility: hidden
        opacity: 0
        margin-top: 30px
      a.read
        visibility: visible
        opacity: 1
      p
        visibility: hidden
        opacity: 0
    .caption.show
      transform: translate(0, -200px)
      .title
        color: $hoverGreen
      a.no-read
        visibility: visible
        opacity: 1
        margin-top: 0px
      a.read
        visibility: hidden
        opacity: 0
      p
        visibility: visible
        opacity: 1
        margin-top: -20px

.why-auto-section
  img
    width: 100%
    height: 100%
  ul
    list-style-type: none
    padding-left: 0px
  li
    margin-bottom: 20px
    font-size: 17px
  li:before
    content: "\2713\0020"
    margin-right: 10px

.why-and-register
  position: relative
  z-index: 1


.register-form
  background: $grey
  overflow: hidden  
  transition: all .8s ease-in-out
.register-form.show
  padding: 50px 0px
.register-form.no-show
  padding: 0px
.register-form-div
  position: absolute
  width: 100%
  // height: 245px
.register-form-div.active
  transition: all .8s ease-in-out
  visibility: visible
  opacity: 1

.register-form-div.inactive
  visibility: hidden
  opacity: 0

