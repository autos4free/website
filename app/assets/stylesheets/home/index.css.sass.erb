@import variables

.hero-button-container
  text-align: center

@media (min-width: 768px)
  .hero-section
    margin-bottom: 50px
    height: 500px
@media (max-width: 767px)
  .hero-section
    height: 770px
.hero-section
  position: relative
  .hero-background
    background: url('<%= asset_path('auto-hero-1.jpg') %>')
    background-size: cover
    height: 500px
  .hero-button-content
    height: 70px
    vertical-align: middle
    padding-left: 20px
    color: white
    font-weight: 600
    font-size: 16px
    cursor: pointer
    transition: .2s ease-out
    -moz-transition: .2s ease-in-out
  .hero-button-content:hover, .hero-button-content:focus, .hero-button-content:active
    text-decoration: none
    color: $hoverGreen
  .hero-container:after, .hero-container:before
    content: " "
    display: table

  @media (min-width: 768px)
    .hero-container
      width: 750px
      margin-right: auto
      margin-left: auto
      padding-left: 15px
      padding-right: 15px
    .hero-container:after, .hero-container:before
      content: " "
      display: table
    .hero-content
      width: 500px
      background: white
      height: 270px
      position: absolute
      bottom: -20px
    .hero-button-content
      display: table-cell
      height: 70px
      width: 500px
  
  @media (min-width: 992px)
    .hero-container
      width: 970px
      margin-right: auto
      margin-left: auto

  @media (min-width: 1200px)
    .hero-container
      width: 1170px
      margin-right: auto
      margin-left: auto  
  
  @media (max-width: 767px)
    .hero-content
      background: white
      height: 270px
    .hero-button-content
      display: block
      height: 70px
      width: 100%
      line-height: 70px

.carousel-content
  padding: 75px 40px
  text-align: center
  height: 100%
  font-size: 20px

.carousel-indicators
  right: 0px
  top: 10px
  width: 70px
  left: inherit

.coupons-image
  width: 100%

.thumbnail
  border: none

.why-section
  .thumbnail
    img
      width: 60px
      height: 60px
    .caption
      text-align: center

.safe-section
  .thumbnail
    position: relative
    padding: 0px
    height: 280px
    overflow: hidden
    box-shadow: 0px 2px 9px -2px rgba(0, 0, 0, 0.3)
    -webkit-box-shadow: 0px 2px 9px -2px rgba(0, 0, 0, 0.3)
    -moz-box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.5)
    .thumb-img
      height: 200px
      width: 100%
      background-size: cover !important
    a
      color: $hoverGreen
    
    $transitionSpeed: 0.8s
    .caption
      height: 280px
      background: white
      transition: all $transitionSpeed ease-in-out  
      -moz-transition: all $transitionSpeed ease-in-out
      -o-transition: all $transitionSpeed ease-in-out
      -webkit-transition: all $transitionSpeed ease-in-out
      .title, p, a
        transition: all $transitionSpeed ease-in-out
        -moz-transition: all $transitionSpeed ease-in-out
        -o-transition: all $transitionSpeed ease-in-out
        -webkit-transition: all $transitionSpeed ease-in-out
    .caption
      a.no-read
        float: none
        position: absolute
        left: 10px
        bottom: 10px
    .caption.no-show
      .title
        color: $black
      a.no-read
        visibility: hidden
        opacity: 0
        margin-top: 30px
      a.read
        visibility: visible
        opacity: 1
      p
        visibility: hidden
        opacity: 0
    .caption.show
      position: absolute
      transform: translate(0, -200px)
      -webkit-transform: translate(0, -200px)
      -o-transform: translate(0, -200px)
      -moz-transform: translate(0, -200px)
      .title
        color: $hoverGreen
      a.no-read
        visibility: visible
        opacity: 1
        margin-top: 0px
      a.read
        visibility: hidden
        opacity: 0
      p
        visibility: visible
        opacity: 1
        margin-top: -20px
